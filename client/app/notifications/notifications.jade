.form-group
  label(for='title').control-label Title
  input.form-control(id='title' type='text' ng-model='item.title' placeholder='Title')

.form-group
  label(for='description').control-label Body
  textarea.form-control(id='description' rows='5' ng-model='item.body' placeholder='Body')

.form-group
  label(for='to').control-label To
  input.form-control(id='to' type='text' ng-model='item.to' placeholder='Registration Token or topics')

  label(for='icon').control-label Icon
  input.form-control(id='icon' type='text' ng-model='item.icon' placeholder='The notifications icon.')

  label(for='color').control-label Color (expressed in #rrggbb format)
  input.form-control(id='color' type='text' ng-model='item.color' placeholder='The notifications color.')

  label(for='action').control-label Action
  input.form-control(id='action' type='text' ng-model='item.action' placeholder='The action associated with a user click on the notification.')

  label(for='sound').control-label Sound
  input.form-control(id='sound' type='text' ng-model='item.sound' placeholder='The sound to play when the device receives the notification.')

  label.control-label Priority
  select.form-control(type='text' ng-model='item.priority' ng-options='option as option for option in ["normal", "high"]' style="width:auto;")

  label(for='messageId').control-label MessageId Firebase
  input.form-control(disabled id='messageId' type='text' ng-model='item.messageId' placeholder='The notifications Firebase messageId.')

  .form-group(ng-class='{"has-error" : !wellFormed}')
    label.control-label Data
    textarea.form-control(ng-model='jsonString' rows='10')

  .btn-group
    button.btn.btn-warning(type='button' ng-click='pushNotification()' ng-disabled='!(item._id && item.title && wellFormed && !item.messageId)' )
      span.glyphicon.glyphicon-upload  Send
