script(type='text/ng-template' id='imagesTemplate.html')
  a
    img(ng-src='{{match.model.imgix}}?fit=crop&w=100&h=30')
    span(ng-bind-html='match.label | typeaheadHighlight:query')

.form-group
  label(for='title').control-label Title
  input.form-control(id='title' type='text' ng-model='item.title' placeholder='Title')
  label(for='partner').control-label Partner
  input.form-control(id='partner' type='text' ng-model='item.partner' placeholder='Partner')
  label(for='description').control-label Description
  textarea.form-control(id='description' rows='5' ng-model='item.description' placeholder='Description')

  .form-group
    label(for='image').control-label Image
    div
      input.form-control(id='image' type='text' ng-model='item.image' placeholder='Search image' uib-typeahead='image as image.name for image in loadImages($viewValue,"press") | limitTo: 5' uib-typeahead-template-url='imagesTemplate.html' style="display:inline;width:80%")
      button.btn.btn-s.btn-primary(ng-click='uploadImage("press","image")' style="display:inline") Upload

  .form-group
    label(for='pdf').control-label Pdf
    div
      input.form-control(id='pdf' type='text' ng-model='item.pdf' placeholder='Search image' uib-typeahead='image as image.name for image in loadImages($viewValue,"press") | limitTo: 5' uib-typeahead-template-url='imagesTemplate.html' style="display:inline;width:80%")
      button.btn.btn-s.btn-primary(ng-click='uploadImage("press","pdf")' style="display:inline") Upload

  .form-group
    label.control-label Date
    p.input-group
      input.form-control(id='date' type='text' ng-model='item.date' is-open='opened' placeholder='DATE' uib-datepicker-popup='{{format}}' uib-datepicker-options='dateOptions' date-disabled='disabled(date, mode)' close-text='Close')
      span.input-group-btn
        button.btn.btn-default(ng-click='opened=!opened')
          i.glyphicon.glyphicon-calendar


  label(for='url').control-label Url
  input.form-control(id='url' type='text' ng-model='item.url' placeholder='Url')
